# Description and Host info
record(waveform, "$(alarm_name)") {
    field(DTYP, "Soft Channel")
    field(DESC, "Test waveform")
    field(NELM, "3")
    field(FTVL, "STRING")   
}
# Alarm status
record(mbbi, "$(alarm_name)A") {
    field(DTYP, "Soft Channel")
    field(ZRST, "ALARM")            field(ZRSV, "MAJOR")
    field(ONST, "ACKED")            field(ONSV, "MINOR")
    field(TWST, "NO_ALARM")         field(TWSV, "NO_ALARM")
    field(PINI, "YES")
    field(VAL, "2")
}
# Alarm Value
record(stringin, "$(alarm_name)V") {
    field(DTYP, "Soft Channel")
    field(PINI, "YES")
    field(VAL, "")
}
# Alarm Time
record(stringin, "$(alarm_name)T") {
    field(DTYP, "Soft Channel")
    field(PINI, "YES")
    field(VAL, "")
}
# Alarm Acknowledge Value
record(stringin, "$(alarm_name)K") {
    field(DTYP, "Soft Channel")
    field(PINI, "YES")
    field(VAL, "")
}